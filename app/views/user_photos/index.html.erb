<div class="albums">
  <h1>Albums</h1>
  <div class="album-container">
    <%- if @photos.length > 0  -%>
      <% @photos.each_with_index do |photo, index| %>
        <li class="user-photos-index">
          <a href='/users/<%= @user.id %>/user_photos/<%= index %>'> <%= image_tag photo.small.url, {class: "album-image"}%> </a>
          <!-- <span>
            <%# <%= link_to "Delete", user_photo_path(@user, index), :method => :delete, data: { confirm: "Are you sure you want to delete this photo?" } %> %>
          </span> -->
        </li>
      <% end %>
    <%- end -%>
  </div><br/>

  <%= form_for(@user, url: user_user_photos_path(@user), method: :post) do |f| %>
    <div class="field">
      <%= f.label :photos, "ADD PHOTOS" %>
      <span class="feed-choose-photo">
        <%= f.file_field :photos, multiple: true %>
      </span>
      <span>
        <%= f.submit "UPLOAD PHOTOS" %>
      </span>
    </div>
  <% end %>
</div>
