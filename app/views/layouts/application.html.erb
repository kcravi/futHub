<!DOCTYPE html>
<html>
  <head>
    <title>FutHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <section class="top-bar">
        <ul class="title-area">
          <li class="name">
            <h1><a href="/">futHub</a></h1>
          </li>
        </ul>

        <section class="top-bar-section">
          <ul class="right">
            <%- if current_user -%>
              <%- if current_user.profile_photo.thumb.url -%>
                <li><%= image_tag current_user.profile_photo.thumb.url %></li>
              <%- end -%>
              <li><%= link_to 'Edit', edit_user_registration_path %></li>
              <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
              <%- if current_user.admin? -%>
                <li><%= link_to "Admin Section", admin_path %></li>
              <%- end -%>
            <%- else -%>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
              <li><%= link_to 'Sign In', new_user_session_path %></li>
            <%- end -%>
          </ul>
        </section>
      </section>

      <section>
        <ul class="snip1211">
          <li><a href="#">About Us</a></li>
          <li><a href="/teams">Local Teams</a></li>
          <li><a href="/">Tournaments</a></li>
          <li><a href="#">Fields</a></li>
          <li><a><%= link_to 'Search (By zipcode)', search_index_path %></a></li>
        </ul>
      </section>
    </nav>

    <%- flash.each do |key, value| -%>
      <div class="flash flash-<%= key %>">
        <%= value %>
      </div>
    <%- end -%>

    <%= yield %>

    <%= javascript_include_tag 'application' %>

    <%- if Rails.env.development? || Rails.env.test? -%>
      <%= javascript_tag do %>
        window.railsEnv = '<%= Rails.env %>'
      <%- end -%>
    <%- end -%>
    <%= javascript_pack_tag 'application' %>

    <%= yield :extra_footer %>
  </body>
</html>
